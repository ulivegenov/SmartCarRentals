@model SmartCarRentals.Web.ViewModels.Main.DriversRatings.DriverRatingCreateInputModel
@{
    this.ViewData["Title"] = "Create Drivers Ratings";
}
@{
    string navImgUrl = "https://res.cloudinary.com/dp70enihl/image/upload/v1583615677/SmartCarRentalsPics/Background/bg_3_dt2wuw.jpg";
}

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('@navImgUrl');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>REgister<i class="ion-ios-arrow-forward"></i></span></p>
                <h1 class="mb-3 bread">@ViewData["Title"]</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section ftco-about">
    <div class="container">
        <div class="row no-gutters">
            <div class="small-box bg-primary">
                <div class="inner">
                    <form class="request-form ftco-animate bg-primary" method="post">
                        <h2 class="text-white">Give Your Vote and Leave a Comment</h2>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="RatingVote" class="label"></label>
                            <input asp-for="RatingVote" class="form-control" placeholder="RatingVote" />
                            <span asp-validation-for="RatingVote" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Coment" class="label"></label>
                            <textarea asp-for="Coment" class="form-control"></textarea>
                            <span asp-validation-for="Coment" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Send</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
