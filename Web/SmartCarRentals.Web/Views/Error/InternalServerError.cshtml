@model SmartCarRentals.Web.ViewModels.Main.Error.ErrorViewModel

@{
    ViewData["Title"] = "Oops!";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string navImgUrl = "https://res.cloudinary.com/dp70enihl/image/upload/w_1000,ar_16:9,c_fill,g_auto,e_sharpen/v1587664110/SmartCarRentalsPics/Background/HTML-500-Internal-Error_i8zlyu.png";
}

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('@navImgUrl');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
            <div class="col-md-9 ftco-animate pb-5">
                <p class="breadcrumbs"><span class="mr-2"><a asp-area="" asp-controller="Home" asp-action="Index">Home <i class="fas fa-greater-than"></i></a></span> <span>@ViewData["Title"]<i class="fas fa-greater-than"></i></span></p>
                <h1 class="mb-3 bread">@ViewData["Title"]</h1>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section ftco-cart">
    <div class="container">
        <div class="sixteen columns">
            <h3>Something went wrong!</h3>
            <h3>Please try again later. If the error persists, contact the owner.</h3>
            <div class="margin-bottom-45"></div>
            <strong>Status code:</strong> <code>@this.Model.StatusCode</code>
            @if (this.Model.ShowRequestId)
            {
                <br />
                <strong>Request ID:</strong> <code>@this.Model.RequestId</code>
            }
            <div class="margin-bottom-35"></div>
        </div>
    </div>
    <div class="margin-top-50"></div>
</section>
