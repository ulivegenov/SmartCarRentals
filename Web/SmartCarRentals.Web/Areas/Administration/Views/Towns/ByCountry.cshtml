@using System.Linq
@model SmartCarRentals.Web.ViewModels.Administration.Towns.TownsAllViewModelCollection
@{
    this.ViewData["Title"] = "Towns All By Country";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <table class="table table-striped table-hover">
                <thead class="table-head-fixed tab">
                    <tr>
                        <th scope="col"><a type="button" class="btn btn-primary py-1 px-1" asp-area="Administration" asp-controller="Towns" asp-action="Create">+ Create New Town</a></th>
                        <th scope="col">Town</th>
                        <th scope="col">Parkings Count</th>
                        <th scope="col">Country</th>
                        <th scope="col">Details Page</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < @Model.Towns.Count(); i++)
                    {
                    <tr>
                        <th scope="row">@(i + 1)</th>
                        <td>@Model.Towns[i].Name</td>
                        <td>@Model.Towns[i].Parkings.Count</td>
                        <td>@Model.Towns[i].CountryName</td>
                        <td><a type="button" class="btn btn-primary py-1 px-1" asp-area="Administration" asp-controller="Towns" asp-action="Details" asp-route-id="@Model.Towns[i].Id">Details</a></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>


