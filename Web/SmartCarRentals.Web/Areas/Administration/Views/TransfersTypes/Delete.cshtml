@model SmartCarRentals.Web.ViewModels.Administration.TransfersTypes.TransferTypeDetailsViewModel
@{
    this.ViewData["Title"] = "Delete TransferType";
}

<section class="content" align="center">
    <div class="container-fluid">
        <div class="row no-gutters">
            <div class="small-box bg-primary">
                <div class="inner">
                    <form class="request-form ftco-animate bg-primary" id="account" method="post">
                        <h2>Do You Want To Delete?</h2>
                        <hr />
                        <div class="form-group">
                            <label asp-for="Id" class="label"></label>
                            <input asp-for="Id" class="form-control" placeholder="Id" readonly />
                        </div>
                        <div class="form-group">
                            <label asp-for="Name" class="label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Price" class="label"></label>
                            <input asp-for="Price" class="form-control" placeholder="Price" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger py-2 px-3" asp-area="Administration" asp-controller="TransfersTypes" asp-action="Delete" asp-route-id="@Model.Id">Delete</button>
                            <button type="submit" class="btn btn-warning py-2 px-3" asp-area="Administration" asp-controller="TransfersTypes" asp-action="Details" asp-route-id="@Model.Id">Go Back</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
