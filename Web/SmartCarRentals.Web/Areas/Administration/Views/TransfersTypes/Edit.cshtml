@model SmartCarRentals.Web.ViewModels.Administration.TransfersTypes.TransferTypeEditInputModel
@{
    this.ViewData["Title"] = "Edit Transfer Type";
}

<section class="content" align="center">
    <div class="container-fluid">
        <div class="row no-gutters">
            <div class="small-box bg-primary">
                <div class="inner">
                    <form class="request-form ftco-animate bg-primary" enctype="multipart/form-data" method="post">
                        <h2>Create a new car</h2>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Price" class="label"></label>
                            <input asp-for="Price" class="form-control" placeholder="Price" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success py-2 px-3" asp-area="Administration" asp-controller="TransfersTypes" asp-action="Edit" asp-route-id="@Model.Id">Update</button>
                            <button type="submit" class="btn btn-warning py-2 px-3" asp-area="Administration" asp-controller="TransfersTypes" asp-action="Details" asp-route-id="@Model.Id">Go Back</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
