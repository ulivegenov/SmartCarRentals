@model SmartCarRentals.Web.ViewModels.Administration.TransfersTypes.TransfersTypesAllViewModelCollection
@{
    this.ViewData["Title"] = "TransfersTypes All";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <table class="table table-striped table-hover">
                <thead class="table-head-fixed tab">
                    <tr>
                        <th scope="col"><a type="button" class="btn btn-primary py-1 px-1" asp-area="Administration" asp-controller="TransfersTypes" asp-action="Create">+ Create New Transfer Type</a></th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < @Model.TransfersTypes.Count; i++)
                    {
                        <tr>
                            <th class="align-middle" scope="row">@(i + 1)</th>
                            <td class="align-middle">@Model.TransfersTypes[i].Name</td>
                            <td class="align-middle">@Model.TransfersTypes[i].Price.ToString("F2")</td>
                            <td class="align-middle"><a type="button" class="btn btn-primary py-1 px-1" asp-area="Administration" asp-controller="TransfersTypes" asp-action="Details" asp-route-id="@Model.TransfersTypes[i].Id">Details</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
