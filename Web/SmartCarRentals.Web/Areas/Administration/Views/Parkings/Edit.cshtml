@model SmartCarRentals.Web.ViewModels.Administration.Parkings.ParkingDetailsViewModel
@{
    ViewData["Title"] = "Edit Parking";
}

<section class="content" align="center">
    <div class="container-fluid">
        <div class="row no-gutters">
            <div class="small-box bg-primary">
                <div class="inner">
                    <form class="request-form ftco-animate bg-primary" id="account" method="post">
                        <h2>Edit Parking</h2>
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TownName" class="label"></label>
                            <input asp-for="TownName" class="form-control" placeholder="TownName" readonly />
                            <span asp-validation-for="TownName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Address" class="label"></label>
                            <input asp-for="Address" class="form-control" placeholder="Address" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <span>Capacity: @Model.Capacity</span>
                        </div>
                        <div class="form-group">
                            <span>
                                Free Parking Slots:
                                <a class="text-light" asp-area="Administration" asp-controller="Reservations" asp-action="ByParking" asp-route-id="@Model.Id"> @Model.FreeParkingSlots</a>
                            </span>
                        </div>
                        <div class="form-group">
                            <span>
                                Cars Count:
                                <a class="text-light" asp-area="Administration" asp-controller="Reservations" asp-action="ByParking" asp-route-id="@Model.Id"> @Model.CarsCount</a>
                            </span>
                        </div>
                        <div class="form-group">
                            <span>
                                Reservations Count:
                                <a class="text-light" asp-area="Administration" asp-controller="Reservations" asp-action="ByParking" asp-route-id="@Model.Id"> @Model.ReservationsCount</a>
                            </span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success py-2 px-3" asp-area="Administration" asp-controller="Parkings" asp-action="Edit" asp-route-id="@Model.Id">Update</button>
                            <button type="submit" class="btn btn-warning py-2 px-3" asp-area="Administration" asp-controller="Parkings" asp-action="Details" asp-route-id="@Model.Id">Go Back</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
