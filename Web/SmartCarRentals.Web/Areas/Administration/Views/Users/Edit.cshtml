@model SmartCarRentals.Web.ViewModels.Administration.Roles.RolesAllViewModelCollection
@{
    this.ViewData["Title"] = "Edit User";
}

<section class="content" align="center">
    <div class="container-fluid">
        <div class="row no-gutters">
            <div class="small-box bg-primary">
                <div class="inner">
                    <form class="request-form ftco-animate bg-primary" method="post">
                        <h2>Add User to Role</h2>
                        <hr />
                        @for (int i = 0; i < Model.Roles.Count; i++)
                        {
                            <div class="form-check">
                                <input type="hidden" asp-for="@Model.Roles[i].Id" />
                                <input type="hidden" asp-for="@Model.Roles[i].UserId" />
                                <input type="hidden" asp-for="@Model.Roles[i].Name" />
                                <input asp-for="Roles[i].IsSelected" class="form-check-input" />
                                <label asp-for="Roles[i].IsSelected" class="form-check-label">@Model.Roles[i].Name</label>
                            </div>
                        }

                        <div class="form-group">
                            <button type="submit" class="btn btn-success py-2 px-3" asp-area="Administration" asp-controller="Users" asp-action="Edit" asp-route-id="@Model.Roles.Select(r => r.UserId).FirstOrDefault()">Edit Roles</button>
                            <button type="submit" class="btn btn-warning py-2 px-3" asp-area="Administration" asp-controller="Users" asp-action="Details" asp-route-id="@Model.Roles.Select(r => r.UserId).FirstOrDefault()">Go Back</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
